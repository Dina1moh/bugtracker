pipeline {
    agent any

    stages {

        // ===================== BACKEND ======================
        stage("Unit Test - Backend") {
            agent {
                docker {
                    image 'golang:1.21'
                    reuseNode true
                }
            }

            environment {
                GOCACHE = "${WORKSPACE}/.gocache"
                PATH = "/go/bin:${PATH}"
            }

            steps {
                sh 'mkdir -p $GOCACHE'

                dir("bugtracker-backend") {
                    sh '''
                        go install github.com/jstemmer/go-junit-report/v2@latest
                        go test -v ./... 2>&1 | /go/bin/go-junit-report -set-exit-code > test-results.xml || true
                        go test -coverprofile=coverage.out -covermode=atomic ./...
                        go tool cover -html=coverage.out -o coverage.html
                        mkdir -p reports
                        mv coverage.html reports/
                    '''
                }
            }

            post {
                always {
                    junit "bugtracker-backend/test-results.xml"
                    publishHTML(target: [
                        reportDir: 'bugtracker-backend/reports',
                        reportFiles: 'coverage.html',
                        reportName: 'Backend Coverage Report',
                        keepAll: true
                    ])
                }
            }
        }

        // ===================== FRONTEND ======================
        stage("Unit Test - Frontend") {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }

            environment {
                NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
            }

            steps {
                sh 'mkdir -p $NPM_CONFIG_CACHE'

                dir("bugtracker-frontend") {
                    sh '''
                        npm ci --legacy-peer-deps
                        npm install jest@29.7.0 ts-jest@29.2.5 jest-junit --save-dev --legacy-peer-deps
                        npm install @testing-library/dom --save-dev --legacy-peer-deps


                        npm test -- --reporters=default --reporters=jest-junit --coverage
                        mkdir -p reports
                        mv coverage reports/
                    '''
                }
            }

            post {
                always {
                    junit "bugtracker-frontend/test-results.xml"
                    publishHTML(target: [
                        reportDir: 'bugtracker-frontend/reports/coverage',
                        reportFiles: 'index.html',
                        reportName: 'Frontend Coverage Report',
                        keepAll: true
                    ])
                }
            }
        }

        // ===================== SONARQUBE ======================
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarScanner' 
                    withSonarQubeEnv('MySonarQube') {   
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

    }
}
