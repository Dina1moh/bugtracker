pipeline {
    agent none

    stages {

        stage("Unit Test - Backend") {
            agent {
                docker {
                    image 'golang:1.21'
                    reuseNode true
                }
            }
            stages {
                stage("Run Backend Tests") {
                    steps {
                        dir("bugtracker-backend") {
                            sh 'go test -v ./...'
                        }
                    }
                }
            }
        }

        stage("Unit Test - Frontend") {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            stages {
                stage("Run Frontend Tests") {
                    steps {
                        dir("bugtracker-frontend") {
                            sh '''
                                npm ci
                                npm test
                            '''
                        }
                    }
                }
            }
        }

    }
}
