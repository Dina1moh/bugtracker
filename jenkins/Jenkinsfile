pipeline {
    agent any
    stages {
        stage("Unit Test - Backend") {
            agent {
                docker {
                    image 'golang:1.21'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = "${WORKSPACE}/.gocache"
            }
            steps {
                sh 'mkdir -p $GOCACHE'
                dir("bugtracker-backend") {
                    sh '''
                        # Install go-junit-report
                        go install github.com/jstemmer/go-junit-report/v2@latest
                        
                        # Run tests and generate JUnit report
                        go test -v ./... 2>&1 | /go/bin/go-junit-report -set-exit-code > test-results.xml || true
                        
                        # Generate coverage report
                        go test -coverprofile=coverage.out -covermode=atomic ./...
                        go tool cover -html=coverage.out -o coverage.html
                         
                        mkdir -p coverage-reports
                        mv coverage.html coverage-reports/
                    '''
                }
            }
            post {
                always {
                    junit "bugtracker-backend/test-results.xml"
                    archiveArtifacts artifacts: 'bugtracker-backend/coverage-reports/**/*', allowEmptyArchive: true
                }
            }
        }
        stage("Unit Test - Frontend") {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            environment {
                NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
            }
            steps {
                sh 'mkdir -p $NPM_CONFIG_CACHE'
                dir("bugtracker-frontend") {
                    sh '''
                        npm ci
                        npm install --save-dev jest-junit
                        npm test -- --config=jest.config.js --coverage --reporters=default --reporters=jest-junit || true
                    '''
                }
            }
            post {
                always {
                    junit "bugtracker-frontend/junit.xml"
                    archiveArtifacts artifacts: 'bugtracker-frontend/coverage/**/*', allowEmptyArchive: true
                }
            }
        }
    }
}